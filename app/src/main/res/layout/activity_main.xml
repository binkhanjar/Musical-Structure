            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Abdu -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_abdu_xml"
            style="@style/CardView_Style"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

