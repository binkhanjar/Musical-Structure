                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_halim"
                    style="@style/CircleImage_Style"
                    android:src="@drawable/hlem"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/text_singerName2_xml"
                    style="@style/tv_singerName_Style"
                    android:layout_below="@+id/img_halim"
                    android:text="@string/singer_name" />

                <TextView
                    android:id="@+id/text_halim_xml"
                    style="@style/tv_Name_Style"
                    android:layout_below="@+id/text_singerName2_xml"
                    android:text="@string/abdel_halim_hafez" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Fairouz -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_firoz_xml"
            style="@style/CardView_Style"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

