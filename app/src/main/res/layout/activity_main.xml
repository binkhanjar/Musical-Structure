<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Umm kulthum -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_UmmKulthum_xml"
            style="@style/CardView_Style"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout style="@style/RelativeLayout_Style">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_umKlthom"
                    style="@style/CircleImage_Style"
                    android:src="@drawable/amklthom"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/text_singerName_xml"
                    style="@style/tv_singerName_Style"
                    android:layout_below="@+id/img_umKlthom"
                    android:text="@string/singer_name" />

                <TextView
                    android:id="@+id/text_UmmKulthum_xml"
                    style="@style/tv_Name_Style"
                    android:layout_below="@+id/text_singerName_xml"
                    android:text="@string/umm_kulthum" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Halim-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_halim_xml"
            style="@style/CardView_Style"
